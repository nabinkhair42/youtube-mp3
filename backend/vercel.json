{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  },
  "buildCommand": "pip install -r requirements.txt && python build_utils.py",
  "installCommand": "pip install -r requirements.txt",
  "devCommand": "uvicorn main:app --reload --host 0.0.0.0 --port 8000",
  "outputDirectory": "."
}
